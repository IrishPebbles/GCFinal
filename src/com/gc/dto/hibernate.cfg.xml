<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<!-- a SessionFactory instance -->
	<session-factory>
		<!-- This is the same connection info we used for JDBC -->
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/outingsapp</property>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.username">mmm</property>
		<property name="hibernate.connection.password">mmm</property>
		<!-- The show-sql property set to true is used for testing and allows us 
			to see the hibernate queries in our console -->
		<property name="show_sql">true</property>
		<!-- This mapping directs the application on where to find the objects 
			to use with the DB -->
		<mapping class="com.gc.dto.AttendeesDto"></mapping>
		<mapping resource="AttendeesDto.hbm.xml"></mapping>
		
		<mapping class="com.gc.dto.CurrentScoreDto"></mapping>
		<mapping resource="CurrentScoreDto.hbm.xml"></mapping>
		
		<mapping class="com.gc.dto.OutingDto"></mapping>
		<mapping resource="OutingDto.hbm.xml"></mapping>
		
		<mapping class="com.gc.dto.PersonDto"></mapping>
		<mapping resource="PersonDto.hbm.xml"></mapping>
		
		<mapping class="com.gc.dto.RestaurantDto"></mapping>
		<mapping resource="RestaurantDto.hbm.xml"></mapping>
		
		<mapping class="com.gc.dto.ServeyDto"></mapping>
		<mapping resource="ServeyDto.hbm.xml"></mapping>

	</session-factory>

</hibernate-configuration>